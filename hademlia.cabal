name:                hademlia
version:             0.1.0.0
synopsis:            A Kademlia implementation
description:         Please see README.md
homepage:            http://github.com/githubuser/hademlia#readme
license:             BSD3
license-file:        LICENSE
author:              James Larisch
maintainer:          jameslarisch@protonmail.com
copyright:           2016 James Larisch
category:            Networks / DHT / Distributed Systems
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Node
                     , Connection
  build-depends:       base >= 4.7 && < 5
                     , network
  default-language:    Haskell2010
  extensions:          RecordWildCards

executable hademlia-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , network
                     , hademlia
  default-language:    Haskell2010
  extensions:          RecordWildCards

test-suite hademlia-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hademlia
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/hademlia
